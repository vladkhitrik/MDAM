@using MDAM.Models
@model MDAM.Models.UserViewModel

@{
    ViewBag.Title = Model.UserName;
}

<h2>Просмотр профиля</h2>

<div>
    <h4>Пользователь @ViewBag.Title</h4>
    <hr />
    <div>
        <div style="float:left;">
            <img class="img-thumbnail" src="~/Images/Users/@Model.Image" height="300" width="300" />
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <h3>@Html.DisplayNameFor(model => model.UserName)</h3>
                @Html.DisplayFor(model => model.UserName)
            </div>
            <div class="col-md-6">
                <h3>@Html.DisplayNameFor(model => model.Email)</h3>
                @Html.DisplayFor(model => model.Email)
            </div>
        </div>
    </div>
</div>
