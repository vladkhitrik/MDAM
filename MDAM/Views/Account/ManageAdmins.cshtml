@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Администраторы";
}

<h2>Администраторы</h2>

@using (Html.BeginForm("ManageAdmins", "Account", FormMethod.Post))
{
    <div class="form-horizontal">
        <h4>Список</h4>
        <hr />
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.Label("Пользователи", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.ListBox("SelectedUsers", ViewBag.Users as MultiSelectList, new { @class = "form-control chzn-select", data_placeholder = "Выберите участников" })
                @Html.ValidationMessageFor(model => model.Users, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/chsjquery")
}


