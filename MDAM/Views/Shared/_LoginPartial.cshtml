@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="login nav navbar-nav navbar-right">
            <li>
                <p class="navbar-text">
                    Добро пожаловать,
                </p>
                <ul class="login nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Управление аккаунтом", @class = "login" })
                    </li>
                </ul>
            </li>
            <li>
                <input id="logoutLink" type="submit" value="Выйти" class="navbar-text btn-link" />
               @* <a href="javascript:$('#logoutForm').ajaxForm({ success: function () { UpdateNavbar(); }}).submit()">Выйти</a>*@
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "viewDialog", dialogTitle = "Регистрация", dialogForm = "registerForm", okBtn = "Регистрация" })</li>
        <li>@Html.ActionLink("Вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "viewDialog", dialogTitle = "Вход", dialogForm = "loginForm", okBtn = "Войти" })</li>
    </ul>
}
